<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All</title>
</head>
<body>
    <h1>All Expenses and Incomes</h1>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% expenss.forEach(function(expense) { %>
                <tr style="color: red;">
                    <% if(expense.date && expense.date instanceof Date) { %>
                        <td><%= expense.date.toDateString() %></td>
                    <% } else { %>
                        <td><%= expense.date %></td>
                    <% } %>
                    <td><%= expense.title %></td>
                    <td><%= expense.amount %></td>
                    <td>
                        <form method="POST">
                            <input type="hidden" name="pk" id="pk" value="<%= expense.id %>">
                            <input type="hidden" name="type" id="type" value="expenss">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
            
            <% incomes.forEach(function(income) { %>
                <tr style="color: green;">
                    <% if(income.date && income.date instanceof Date) { %>
                        <td><%= income.date.toDateString() %></td>
                    <% } else { %>
                        <td><%= income.date %></td>
                    <% } %>
                    <td><%= income.title %></td>
                    <td><%= income.amount %></td>
                    <td>
                        <form method="POST">
                            <input type="hidden" name="pk" id="pk" value="<%= income.id %>">
                            <input type="hidden" name="type" id="type" value="income">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
            
        </tbody>
    </table>
</body>
</html>